{
    "listeners": [
        {
            "address": "0.0.0.0",
            "port": 8080,
            "https": false
        }
    ],
    "app": {
        "number_of_threads": 4,
        "enable_server_header": false,
        "log": {
            "level": "debug",
            "use_spdlog": true
        }
    },
    "gateway": {
        "backend_url": "http://httpbin.org",
        "backend_timeout_seconds": 10
    },
    "ml_model": {
        "path": "/models/abuse_detector.onnx",
        "threshold_block": 0.8,
        "threshold_throttle": 0.5,
        "throttle_max_delay_ms": 3000,
        "ban_duration_seconds": 300
    }
}
